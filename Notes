sonar_dict = {}

if response.status_code == 200:
    jenkinsfile_content = response.text

    # Regex pattern to strictly match only `sonarkey`
    pattern = re.compile(r'\bsonarkey\s*=\s*[\'"]([^\'"]+)[\'"]', re.IGNORECASE)

    match = pattern.search(jenkinsfile_content)

    if match:
        sonar_dict["sonarkey"] = match.group(1)  # Capture the first valid sonarkey
        print("Extracted SonarQube Key:", sonar_dict)
    else:
        print("No `sonarkey` found in Jenkinsfile.")